 */ 

#include <stdio.h>
int main() {
    int a, b, i=0;
    printf("Enter first number: ");
    scanf("%d", &a);
    printf("Enter second number: ");
    scanf("%d", &b);

    while (a < b) {
       a=i;
       i++;
       i<b;
    }
    printf ("The value of a is now: %d", a);
    
    switch(a) {
            case 1:
                printf("\nOne ");
                break;
            case 2:
                printf("\nTwo ");
                break;
            case 3:
                printf("\nThree ");
                break;
            case 4:
                printf("\nFour ");
                break;
            case 5:
                printf("\nFive ");
                break;
            case 6:
                printf("\nSix ");
                break;
            case 7:
                printf("\nSeven ");
                break;
            case 8:
                printf("\nEight ");
                break;
            case 9:
                printf("\nNine ");
                break;
            default:
                // checking last bit. if off then even otherwise odd.
                if(i%2==0) {
                    printf("\nThe iterated value is: %d\nEven", i);
                }
                else { 
                    printf("\nThe iterated value is: %d\nOdd", i);
                }

    return 0;
}
}
